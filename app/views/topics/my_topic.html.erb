<p id="notice"><%= notice %></p>
<div class="container">
  <div class="col-md-3 col-md-offset-1 ">
    <div class="panel">
      <p><%= profile_img(current_user)%></p>
      <p><%= current_user.name%></p>
    </div>
  </div>
  <div class="col-md-7 ">
    <%= render 'form' %>
  </div>
  </div>

<div class="container">
  <div class="col-md-3 col-md-offset-1 hidden-sm hidden-xs">
    <%= render "friends_index"%>
  </div>
<div class="col-md-7">
    <% @topics.each do |topic| %>


    <div class="panel">
      <div class="panel-heading">
        <%=image_tag topic.user.image_url %><%= topic.user.name %>さんが投稿しました。
      </div>

      <div class="panel-body">
        <p><%= topic.content %></p>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to '投稿を編集する', edit_topic_path(topic) %></li>
            <li><%= link_to '投稿を削除する', topic, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </li>
        <div class="thumbnail">
          <%= image_tag topic.image.url %>
        </div>
        <%= link_to '', topic, class:"fa fa-comment-o" %>
        <%= render 'like_form', user: current_user, topic: topic %>

      </div>
    </div>
    <% end %>
  </div>
    </div>
    </div>
